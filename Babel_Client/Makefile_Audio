CC      =       g++

CXXFLAGS        =       -W -Wall -Wextra -L$$PWD/lib -lportaudio -lopus

RM      =       rm -f

INCLUDE =       inc/

OBJ_DIR =	obj/

DIR     =       src/

NAME    =       audioTest

SRC     =       $(DIR)mainAudio.cpp \
                $(DIR)AudioHandler.cpp

all: $(NAME)

$(OBJ_DIR)%.o:	$(DIR)%.cpp
			@mkdir -p $(OBJ_DIR)
			$(CC) -c -o $@ $< -I $(INCLUDE) $(CXXFLAGS)

$(NAME): $(OBJ)
		@$(CC) $(CXXFLAGS) -I $(INCLUDE) -o $(NAME) $(OBJ)
		@echo -e "\033[32m\taudioTest\t DONE !\033[0m"

clean:
		@$(RM) $(OBJ)
		@echo -e "\033[32mDirectory cleaned !\033[0m"

fclean: clean
		@$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
