NAME	=	babel_test

GCC	=	g++

GCCFLAGS	=	-lportaudio -L$$PWD/lib -lopus

SRC	=	src/AudioHandler.cpp	\
		src/EncodeAudio.cpp	\
		src/mainAudio.cpp

OBJ	=	$(SRC:.cpp=.o)


$(NAME)	:	$(OBJ)
		$(GCC) $(OBJ) -o $(NAME) $(GCCFLAGS)

all	:	$(NAME)

clean	:
		rm -f $(OBJ) *~

fclean	:	clean
		rm -f $(NAME)

re	:	fclean all