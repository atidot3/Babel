Class:

Server
{
 ISocket	*sock;
 ClientManager	clients;
 bool		running;

 run();
 stop();
}

Client
{
 ISocket	*sock;
 bool		busy;
 int		fdContact;
 char		buff[BUFF_SIZE];

 addContact();
 removeContact();
 askConnection();
 acceptConnection();
 isBusy();
}

ClientManager
{
 mapClient<string, Client &>;
 mapClient<string, Client &>::iterator;

 addClient();
 removeClient();
 getClient();
 findClient();
}

ISocket (network abstraction)
{
 bind();
 listen();
 accept();
 connect();
 send();
 recv();
}